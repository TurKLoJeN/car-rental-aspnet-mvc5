@model OSTCarRental.Models.Entity.TBLHAKKIMIZDA
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/PanelLayout.cshtml";
}

<h2>Hakkımda Güncelle</h2>

@if ((TempData["HakkimdaGuncelle"] != null))
{
    <div class="alert alert-success">@TempData["HakkimdaGuncelle"]</div>
}

@using (Html.BeginForm("HakkimdaGuncelle", "Hakkimda", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        <div style="margin-bottom:15px">
            <label>ID</label>
            @Html.TextBoxFor(k => k.ID, new { @class = "form-control", @readonly = "readonly" })
        </div>
        <div style="margin-bottom:15px">
            <label>Hakkımda Yazınız</label>
            @Html.TextAreaFor(k => k.ACIKLAMA, new { @class = "form-control",id= "summernote", @rows = "20", @cols = "40" })
        </div>
        <div style="margin-top:20px;">
            <button class="btn btn-warning">Yazıyı Güncelle</button>
        </div>
    </div>
}

<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>

<script>
    $('#summernote').summernote({
        placeholder: 'Hello stand alone ui',
        tabsize: 2,
        height: 120,
        toolbar: [
            ['style', ['style']],
            ['font', ['bold', 'underline', 'clear']],
            ['color', ['color']],
            ['para', ['ul', 'ol', 'paragraph']],
            ['table', ['table']],
            ['insert', ['link', 'picture', 'video']],
            ['view', ['fullscreen', 'codeview', 'help']]
        ]
    });
</script>