@model OSTCarRental.Models.Entity.TBLKATEGORI
@{
    ViewBag.Title = "KategoriGetir";
    Layout = "~/Views/Shared/PanelLayout.cshtml";
}

@using (Html.BeginForm("KategoriGuncelle", "AracKategori", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        <div style="margin-bottom:15px">
            <label>ID</label>
            @Html.TextBoxFor(k => k.ID, new { @class = "form-control", @readonly = "readonly" })
        </div>
        <div style="margin-bottom:15px">
            <label>Kategori Adı</label>
            @Html.TextBoxFor(k => k.KATEGORIAD, new { @class = "form-control"})
        </div>
        <div style="margin-top:20px;">
            <button class="btn btn-warning">Kira Güncelle</button>
        </div>
    </div>
}


